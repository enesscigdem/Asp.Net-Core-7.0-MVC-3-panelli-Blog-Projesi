@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}
<h4>Category List</h4>
<br />
<div class="card">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Pasif Yap</th>
            <th>Aktif Yap</th>
            <th>Düzenle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td><a href="#" class="btn btn-outline-danger">Pasif Yap</a></td>
                <td><a href="#" class="btn btn-outline-success">Aktif Yap</a></td>
                <td><a href="#" class="btn btn-outline-info">Düzenle</a></td>
            </tr>
        }
    </table>
</div>
<br />
<a href="/Blog/BlogAdd" class="btn btn-success">Yeni Kategori Oluştur</a>