@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">


    @if (Model.Count() == 0)
    {
        <h6>Hiç yorum yapılmamış. İlk yorumu sen yap!</h6>
    }
    else
    {
        <h4>Yorumlar</h4>
    }
    @foreach (var item in Model)
    {

        <div class="media">
            <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUsername</h5>
                <p>
                    @item.CommentContent.
                </p>
            </div>
        </div>
    }
</div>